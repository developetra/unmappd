                    <EditText
                        android:id="@+id/distanceLandmark2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="distance" />

                    <TextView
                        android:id="@+id/textViewDistanceLandmark2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Direction to landmark" />

                    <EditText
                        android:id="@+id/directionLandmark2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="direction" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10pt"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="192dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_height="wrap_content"
                        android:text="Landmark 1" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="190dp"
                        android:layout_height="121dp"
                        app:srcCompat="@drawable/bambger_mainimg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewDirectionLandmark3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Distance to landmark" />

                    <EditText
                        android:id="@+id/distanceLandmark3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="distance" />

                    <TextView
                        android:id="@+id/textViewDistanceLandmark3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
